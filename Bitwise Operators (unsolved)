#include <bits/stdc++.h>
typedef long long ll;
using namespace std;



int main()
{
    int t;
    cin >>t;

    while(t--)
    {
        ll n;
        cin >> n;

        if(n == 1)
        {
            cout << -1 << "\n";
            continue;
        }

        if((n%2) == 0) // last bit is 0
        {
            cout << 1 << " " << (n+1) << "\n";

            //cout << (1^(n+1)) << "\n";
            continue;
        }
        cout << 1 << " " << (n - 1) << "\n";
        //cout << (1^(n-1)) << "\n";



    }













    return 0;
}
