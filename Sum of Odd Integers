#include <bits/stdc++.h>
typedef long long ll;
using namespace std;


int main()
{

    int t;
    cin >> t;
    while(t--)
    {
        ll n, m;
        cin >> n >> m;
        if ((n + m) % 2 == 0 && (m * m) <= n)   cout << "YES" << "\n"; //random observations tbh, no way it works
        else                                    cout << "NO \n";
    }

    
    return 0;
}
