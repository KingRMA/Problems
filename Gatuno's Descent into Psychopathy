#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;

    for (int i = 0; i < t; i++) 
    {
        double h1, h2, b;
        cin >> h1 >> h2 >> b;

        
        long double ratio = h2 / h1;
        long double base = (b - 1.0) / b;

        long double n = log(ratio) / log(base);

        cout << (long long)ceil(n) << "\n";
    }

    return 0;
}
