#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin >> n;

    vector<int> v(n);
    for (int i = 0; i < n; i++) cin >> v[i];

    int sum1 = 0, sum2 = 0, l = 0, r = n-1;

    while(l <= r)
    {
        if(v[l] > v[r])
        {
            sum1 += v[l];
            l++;
        }
        else
        {
            sum1 += v[r];
            r--;
        }
        if (l > r) break;
        if(v[l] > v[r])
        {
            sum2 += v[l];
            l++;
        }
        else
        {
            sum2 += v[r];
            r--;
        }
    }


    cout << sum1 << " " << sum2 << "\n";
    return 0;
}
