#include <bits/stdc++.h>
typedef long long ll;
using namespace std;

map<pair<int, int>, string> mp;


int main() 
{
    int t;
    cin >> t;

    while(t--)
    {
        int n, k, res = 0;
        cin >> n >> k;

        string s;
        cin >> s;


        for (int i = 0; i < s.size(); ++i)
        {
            if(s[i] == 'B')
            {
                res++;
                i += k-1;
            }

        }

    cout << res << "\n" ;

    }





    return 0;
}
