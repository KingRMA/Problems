#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n, t;
    cin >> n >> t;

    vector<int> v(n);
    for (int i = 0; i < n; i++) cin >> v[i];

    int l = 0, r = 0, res = 0;
    long long curr = 0;

    while (r < n)
    {
        curr += v[r];

        while (curr > t && l <= r)
        {
            curr -= v[l];
            l++;
        }

        res = max(res, r - l + 1);
        r++;
    }

    cout << res << "\n";
    return 0;
}
